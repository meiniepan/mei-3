<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wuyou.worker">

    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".CarefreeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme,android:allowBackup,android:name">
        <activity
            android:name=".view.activity.AppStartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.companies.CompaniesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ContractDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ServiceProviderDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.order.ChoseServerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.login.CaptchaInputActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.login.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.login.CompletingInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.login.PhoneInputActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.login.ResetPwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.TradeDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.wallet.FundIntroduceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.order.ChoseServerAllianceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.message.ConversationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.wuyou.worker"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.FinishOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".mvp.wallet.WalletTransactionActivity" />
        <activity android:name=".mvp.info.WorkerInfoActivity" />
        <activity android:name=".view.activity.OrderStatisticsActivity" />
        <activity android:name=".view.activity.IdentifyActivity" />
        <activity android:name=".mvp.info.ModifyGenderActivity" />
        <activity
            android:name=".mvp.info.ModifyNickActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".mvp.order.OrderChangeTimeActivity" />
        <activity android:name=".mvp.order.OrderDetailActivity" />
        <activity
            android:name=".mvp.info.ModifyPhoneActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".view.activity.WebActivity" />
        <activity android:name=".view.activity.FeedbackActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.wuyou.worker.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/rc_file_path" />
        </provider>
    </application>
</manifest>

