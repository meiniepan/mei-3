<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="15dp"
    android:paddingStart="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/iv_service_confirm"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_pic" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text="扫码支付"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_12sp"
                android:gravity="center"
                android:background="@drawable/bac_text_blue_bottom"
                android:layout_gravity="bottom"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="9dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/dimens_15sp"
                    tool:text="sdsd" />

                <TextView
                    android:id="@+id/tv_service_confirm_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/dimens_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/tv_service_confirm_sub_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/dimens_15sp" />

                <TextView
                    android:id="@+id/tv_service_confirm_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens_15sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/split_line" />

</LinearLayout>