<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_title_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/main_blue">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <com.wuyou.worker.view.widget.NoScrollViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/split_line" />

    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/home_order_0"
            app:tabIconSelected="@mipmap/home_order_1"
            app:tabText="@string/main_order"
            app:textColorNormal="@color/common_dark"
            app:textColorSelected="@color/main_blue" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/home_message_0"
            app:tabIconSelected="@mipmap/home_message_1"
            app:tabText="@string/message"
            app:textColorNormal="@color/common_dark"
            app:textColorSelected="@color/main_blue" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/home_store_0"
            app:tabIconSelected="@mipmap/home_store_1"
            app:tabText="@string/main_mine"
            app:textColorNormal="@color/common_dark"
            app:textColorSelected="@color/main_blue" />
    </com.yinglan.alphatabs.AlphaTabsIndicator>
</LinearLayout>
