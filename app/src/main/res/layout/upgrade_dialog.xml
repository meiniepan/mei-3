<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/update_bg"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="120dp"
            android:background="@null"
            android:editable="false"
            android:gravity="center"
            android:text="发现新版本"
            android:textColor="@color/common_gray"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="beta_title"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="beta_cancel_button"
            android:visibility="gone" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 【必设】升级信息控件tag：beta_upgrade_info-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:tag="beta_upgrade_info"
                    android:text="info"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@string/strUpgradeDialogFeatureLabel"
                    android:textColor="#273238"
                    android:textSize="14sp" />
                <!-- 【必设】更新属性控件tag：beta_upgrade_feature-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:tag="beta_upgrade_feature"
                    android:textColor="@color/common_gray" />
            </LinearLayout>
        </ScrollView>


        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/blue_radius_button"
            android:tag="beta_confirm_button"
            android:text="立即升级"
            android:textSize="@dimen/dimens_16sp"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>