<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="6dp"
    android:paddingStart="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_service_confirm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/default_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimens_10sp"
                    tool:text="sdsd" />

                <TextView
                    android:id="@+id/tv_service_confirm_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/dimens_8sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tv_service_confirm_sub_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/dimens_10sp" />

                <TextView
                    android:id="@+id/tv_service_confirm_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens_10sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/split_area" />

</LinearLayout>